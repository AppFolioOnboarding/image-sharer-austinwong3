<h1 class='d-flex justify-content-center'>Images</h1>

<%=link_to "Add Image", new_image_path, class: 'btn btn-primary my-3'%>
<ul class='p-0'>
  <% @images.each do |image| %>
    <div class= 'd-flex align-items-center'>
      <%= image_tag(image.url, class: 'img-thumbnail p-2 m-1', style: 'max-width: 400px') %><br>
      <p class='m-2'> Tags: </p>
      <% image.tag_list.each do |tag| %>
        <%= link_to tag, root_path(tag: tag), class: 'badge badge-secondary' %>
      <% end %>
    </div>
  <% end %>
</ul>
